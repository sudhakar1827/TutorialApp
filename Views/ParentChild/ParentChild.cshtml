
@{
    ViewData["Title"] = "ParentChild";
}

<form asp-action="CreateParentAndChild" method="post">
    <div class="form-group">
        <label for="ParentName">Parent Name</label>
        <input type="text" class="form-control" id="ParentName" name="ParentName">
    </div>
    <div class="form-group">
        <label for="ChildName">Child Name</label>
        <input type="text" class="form-control" id="ChildName" name="ChildName">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
